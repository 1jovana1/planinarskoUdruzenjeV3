

@model IEnumerable<planinarskoUdruzenjeV3.Areas.Identity.Data.User>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Users</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Rd.broj</td>
            <td>Ime</td>
            <td>Prezime</td>
            <td>Broj mobitela</td>
            <td>Email</td>
            <td>Prezime</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@(user.PhoneNumber!=null ? user.PhoneNumber: "--- ---" )</td>
            <td>@user.Email</td>
            <td>@user.EmailConfirmed</td>        
            <td> <a asp-action="Edit" asp-route-id="@user.Id">Izmijeni</a> |</td>
        </tr>
        }
    </tbody>
</table>