

@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>User Roles</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Roles</th>
            <th>Aktivan</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <form asp-action="Activate" asp-route-id="@user.UserId">
                        <input class="form-check-input" type="checkbox" @(user.isActive ? "checked" : "") onChange="this.form.submit()">
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>

    </script>
}
