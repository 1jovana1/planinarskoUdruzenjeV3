@model IEnumerable<planinarskoUdruzenjeV3.Models.Event>

@{
    ViewData["Title"] = "Index";
}




<div class="row">
    <div class="col-12">
        <div class="card bg-transparent">
            <div class="card-header">
                <div class="card-text float-right">
                    @if (User.IsInRole("administrator"))
                    {
                        <div class="card-title">
                            <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus mr-2"></i>Dodaj novu</a>
                        </div>
                    }
                    </div>
                <h2 class="card-title">
                    <i class="fas fa-mountain mr-4"></i> Planinarske akcije
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3 col-sm-6">
                            <div class="card mb-4">
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    <img class="card-img-top" src="~/Events/Image/?id=@item.Id" style="width: 242px; height: 220px;" alt="Card image cap">
                                </a>
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                                    <h6 class="card-text"><i class="far fa-calendar-check mr-2"></i>@Html.DisplayFor(modelItem => item.Date)</h6>
                                    <h6 class="card-text"><i class="fas fa-map-marker-alt mr-2"></i>@Html.DisplayFor(modelItem => item.Location)</h6>
                                    @*<div>
        <a class="btn btn-primary dugme" asp-action="Details" asp-route-id="@item.Id">Opširno</a>
         </div>*@
                                    @*<div>
             <a class="btn btn-danger dugme" asp-action="Delete" asp-route-id="@item.Id">Izbriši</a>
               <a class="btn btn-info dugme" asp-action="Edit" asp-route-id="@item.Id">Uredi</a>
        </div>*@
                                </div>
                          
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@ViewBag.TotalPages" page-target="/events/index/" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
</div>