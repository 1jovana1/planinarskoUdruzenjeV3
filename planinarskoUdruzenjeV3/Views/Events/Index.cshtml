@model IEnumerable<planinarskoUdruzenjeV3.Models.Event>

@{
    ViewData["Title"] = "Index";
}




<div class="row">
    <div class="col-12">
        <div class="card bg-transparent">
            <div class="card-header">
                <div class="card-text float-right">
                    <div class="card-title">
                        <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus mr-2"></i>Dodaj novu</a>
                    </div>
                </div>
                <h2 class="card-title">
                    <i class="fas fa-mountain mr-4"></i> Planinarske akcije
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 col-sm-6">
                            <div class="card mb-4">
                                <img class="card-img-top" src="https://thumbs.dreamstime.com/b/no-image-available-icon-photo-camera-flat-vector-illustration-132483141.jpg" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Uredi</a>
                                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Opširno</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Izbriši</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@ViewBag.TotalPages" page-target="/events/index/" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
</div>