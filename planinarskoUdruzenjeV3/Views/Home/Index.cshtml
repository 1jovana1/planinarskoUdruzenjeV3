@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Planinarsko udruženje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Planinarsko udruženje</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Početna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">Planinarske akcije</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Obavještenja</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="News" asp-action="Index">Sva obavještenja</a>
                                @foreach (var item in News.GetCategoryList)
                                {
                                    <a class="dropdown-item" asp-area="" asp-controller="News" asp-action="Index" asp-route-category="@item">@item</a>
                                }
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">O nama</a>
                        </li>
                        @if (User.IsInRole("administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Korisnički nalozi</a>
                            </li>
                        }
                        <partial name="../Shared/_LoginPartial.cshtml" />
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <!-- Slide One - Set the background image for this slide in the line below -->
                <div class="carousel-item active" style=" background-image: url(images/julian-bialowas-ilkTnuMunP8-unsplash.jpg)">
                    <div class="carousel-caption d-none d-md-block carousel-caption-center">
                        <h2 class="display-4">Dobro došli</h2>
                    </div>
                </div>
                <!-- Slide Two - Set the background image for this slide in the line below -->
                <div class="carousel-item" style="background-image:url(images/wp1903469-hiking-wallpapers.jpg)">
                    <div class="carousel-caption d-none d-md-block carousel-caption-center">
                        <h2 class="display-4">Pogledajte aktuelne planinarske akcije</h2>
                        <h1><a asp-controller="Events" asp-action="Index">Kliknite za pregled</a></h1>
                    </div>
                </div>
                <!-- Slide Three - Set the background image for this slide in the line below -->
                <div class="carousel-item" style="   background-image: url(images/arthur-poulin-NhU0nUR7920-unsplash.jpg)">
                    <div class="carousel-caption d-none d-md-block carousel-caption-center">
                        <h2 class="display-4">Postanite naš član</h2>
                        <h1 class="lead">Još uvijek nemate nalog? </h1>
                        <h1><a href="/Identity/Account/Register">Registrujte se</a></h1>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            © 2020, made with <i class="far fa-heart"></i> by
            <a href="/Home/About" target="_self">Planinarsko udeuženje</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
